        android:id="@+id/btn_bai4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bài 4"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_bai4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canvas Animation"
        android:textAllCaps="false"/>
